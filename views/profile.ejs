<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>
  <link rel="stylesheet" href="/stylesheets/profile.css">
  <link rel="shortcut icon" href="https://s.pinimg.com/webapp/favicon-22eb868c.png" type="image/x-icon">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/dppallet.css">
  <script src="/javascripts/popup-form.js"></script>
  <script src="/javascripts/profile.js"></script>
</head>

<body>

  <div class="profile-container">
    <div class="profile-card">
      <div class="profile-picture">
        <img src="https://i.pinimg.com/564x/72/60/44/726044ff9fca15ce43229e39a0c948c6.jpg" alt="Profile Picture">
      </div>

      
      <h2 class="name">
        <%= user.fullName %>
      </h2>
      <h3 class="username">@<%= user.username %>
      </h3>
      <div class="buttons">
        <a href="/feed" class="button btn btn-success">Feed</a>
      <a href="/logout" class="button btn btn-danger">Logout</a>
      </div>

    </div>
  </div>

  <!-- Cards Container Start Here -->

  <div class="container">

<% user.posts.forEach(function(post){ %>
  <div class="box">
   
    <a href="/images/uploads/<%= post.image %>" target="_blank" id="overlay">
      <img src="/images/uploads/<%= post.image %>" alt="image"></a>
    <div class="caption">#<%= post.postText %> </div>
  </div>
<% }) %>

  </div>

  <!-- Cards Container Ends Here -->

  <div class="post-box">
    <div class="form-popup" id="myForm">
      <form action="/upload" class="form-container" method="post" enctype="multipart/form-data">
        <div class="input-file">
          <input type="file" id="file-input" name="file" onchange="showPreview(event);">
          <label id="file-input-label" for="file-input">Select a File</label>
          <img id="file-ip-1-preview">
        </div>
        <input type="text" name="filecaption" id="filecaption" placeholder="Caption" maxlength="15">
        <input type="submit" class="btn">
      </form>
    </div>


    <a class="newpost" id="newpost" onclick="formAction()">
      <img src="/images/plus.png" alt="">
    </a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
  <script src="/javascripts/profile.js"></script>

</body>

</html>